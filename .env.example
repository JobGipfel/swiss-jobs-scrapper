# Swiss Jobs Scraper Environment Variables
# =========================================
# Copy this file to .env and configure for your environment

# =============================================================================
# App Configuration
# =============================================================================

# Environment: development, staging, production
APP_ENV=production

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# API Server Configuration
# =============================================================================

# API port (external port exposed by Docker)
API_PORT=8000

# Number of Uvicorn workers (for production)
WORKERS=4

# =============================================================================
# Rate Limiting
# =============================================================================

# Maximum requests per period
RATE_LIMIT_REQUESTS=100

# Rate limit period in seconds
RATE_LIMIT_PERIOD=60

# =============================================================================
# Proxy Configuration (optional - for aggressive mode)
# =============================================================================

# Single proxy URL
# PROXY_URL=socks5://user:pass@proxy.example.com:1080

# Comma-separated list of proxy URLs for rotation
# PROXY_POOL=socks5://proxy1:1080,socks5://proxy2:1080,socks5://proxy3:1080

# =============================================================================
# Security (optional)
# =============================================================================

# API key for authentication (if implemented)
# API_KEY=your-secret-api-key

# =============================================================================
# Redis Cache (optional - when using with-cache profile)
# =============================================================================

# REDIS_URL=redis://redis:6379/0
# CACHE_TTL=300
